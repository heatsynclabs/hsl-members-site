{
  "include": [
    "**/*",
    "**/*.ts",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "exclude": ["../servers"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@components/*": ["./app/lib/components/*"],
      "@icons": ["./app/lib/icons"],
      "@utils": ["./app/lib/utils"],
      "@hooks/*": ["./app/lib/hooks/*"],
      "@layouts/*": ["./app/lib/layouts/*"],
      "@context/*": ["./app/lib/context/*"],
      "@elements/*": ["./app/lib/elements/*"],
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
